<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="aegis">
  <xacro:arg name="initial_positions_file" default="initial_positions.yaml"/>

  <!-- Import aegis urdf file -->
  <xacro:include filename="$(find aegis_description)/urdf/aegis.urdf.xacro"/>

  <!-- Import control_xacro -->
  <xacro:include filename="aegis.ros2_control.xacro"/>

  <xacro:aegis_ros2_control name="FakeSystem" initial_positions_file="$(arg initial_positions_file)"/>
</robot>
